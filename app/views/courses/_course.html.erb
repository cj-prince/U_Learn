<div class="card text-white bg-secondary">
    <div class="card-header ">
        <i class="fa fa-book"></i>
        <%= link_to course.title, course_path(course)  %>
    </div>
    <div class="card-body">
        <%= course.description %>
    </div>
    <div class="card-footer">
        <div class="fa fa-globe"><%= course.language %></div>
        <div class="fa fa-signal"> <%= course.level %></div><br>
        <div class="fa fa-tag"><%= number_to_currency(course.price) %></div>
    </div>
    <div class="card-footer">
        <div class="fa fa-book"><%= course.lessons.count %> </div>
    </div>
    <div class="card-footer">
        <i class="fa fa-clock"></i>
        <%= course.created_at.strftime('%d-%b-%Y') %>
        <i class="fa fa-chalkboard-teacher"></i>
        <%= course.user %>
        <table >
            <tbody>
                <tr>
                    <% if current_user && current_user.has_role?(:admin) %>
                        <td><%= link_to 'Edit', edit_course_path(course),class:'btn btn-sm btn-warning style="font-size: 0.8em;' %></td>
                        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-danger style="font-size: 0.8em;' %></td>
                    
                    <%end%>
                </tr>
            </tbody>
          </table>
    </div>
</div>