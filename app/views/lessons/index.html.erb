<p id="notice"><%= notice %></p>
<div class="card ">
  <div class="card-header">
    <h1>Lessons</h1>
  </div>
  <div class="card-body">
    <table class="table-dark table-striped col-md-12 table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Course</th>
          <th colspan="3"></th>
        </tr>
      </thead>
  
      <tbody>
        
        <% @lessons.each do |lesson| %>
          <tr>
            <td><%= lesson.title %></td>
            <td><%= lesson.content %></td>
            <td><%= lesson.course_id %></td>
            <td><%= link_to 'Show', lesson %></td>
            <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
            <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

  
  <br>

  <%= link_to 'New Lesson', new_lesson_path %>