<% @lessons.each do |lesson| %>
    <div class="card">
        <div class="card-header">
            <%= link_to lesson.title, lesson %>
        </div>
        <div class="card-body">
            <%= lesson.content %>
            <%= lesson.course %>
        </div>
        <div class="card-footer">
            <%= link_to 'Edit', edit_lesson_path(lesson) %>
            <%= link_to 'Destroy',lesson, method: :delete, data: {confirm: 'Are you sure?'} %>
        </div>
    </div>
<% end %>